<?xml version="1.0" encoding="utf-8"?>
<LinearLayoutLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.up.demos.helloarduino.MainActivity">

    <TextView
        android:text="Hello Arduino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/btConectar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Conectar"
            android:enabled="false" android:onClick="onClickConectar" />

    <Button android:id="@+id/btLigar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Ligar"
            android:enabled="false" android:onClick="onClickLigar" />

    <Button android:id="@+id/btDesligar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Desligar"
            android:enabled="false" android:onClick="onClickDesligar" />

    <Button android:id="@+id/btPiscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Piscar"
            android:enabled="false" android:onClick="onClickPiscar" />

</LinearLayoutLayout>
